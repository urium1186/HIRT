                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Paths to tag xml">
                    <GridViewColumn  Header="GlobalId" Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding IntValueStr, Mode=OneWay}"></TextBox>
                                    
                                </StackPanel>

                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>
        -->
        
        <TreeView ItemsSource="{Binding Entries}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                  VirtualizingPanel.IsContainerVirtualizable="True"
                  VirtualizingPanel.VirtualizationMode="Recycling">
            <TreeView.Resources>
                <DataTemplate DataType="hifiles:IncrEntry">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="OffsetLike: "></Label>
                       <TextBox Text="{Binding IntValueStr}"  IsReadOnly="True"/>
                    </StackPanel>
                    
                </DataTemplate>
                <DataTemplate DataType="x:UInt32">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="OffsetLike: "></Label>
                        <TextBox Text="{Binding Self}"  IsReadOnly="True"/>
                    </StackPanel>

                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    
    </Grid>
</views:View>
